# =============================================================================
# NairaTrack Backend Environment Variables
# =============================================================================
# Copy this file to .env for local development
# In production (AWS ECS), set these in AWS Parameter Store or ECS Task Definition
# =============================================================================

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
# Environment: development, staging, production
DJANGO_ENV=development

# Django secret key - generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-django-secret-key-here

# Debug mode - ALWAYS False in production!
DEBUG=True

# Allowed hosts (comma-separated)
# Local: localhost,127.0.0.1
# Production: api.personal-finance.namelesscompany.cc
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CORS allowed origins (comma-separated)
# Local: http://localhost:3000
# Production: https://personal-finance.namelesscompany.cc
CORS_ALLOWED_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Local development (Docker):
DB_HOST=db
DB_PORT=5432
DB_NAME=nairatrack
DB_USER=nairatrack
DB_PASSWORD=localdevpassword

# Production (AWS RDS):
# These should be pulled from AWS Parameter Store
# DB_HOST=/nairatrack/prod/db/host
# DB_NAME=/nairatrack/prod/db/name
# DB_USER=/nairatrack/prod/db/user
# DB_PASSWORD=/nairatrack/prod/db/password

# Or use DATABASE_URL format:
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# -----------------------------------------------------------------------------
# Auth0 Configuration (for backend token validation)
# -----------------------------------------------------------------------------
AUTH0_DOMAIN=dev-xxxxx.auth0.com
AUTH0_API_IDENTIFIER=https://api.personal-finance.namelesscompany.cc
AUTH0_CLIENT_ID=your-backend-client-id

# -----------------------------------------------------------------------------
# Mono API (Nigerian Bank Integration)
# -----------------------------------------------------------------------------
# Get these from https://app.withmono.com/
MONO_SECRET_KEY=sk_live_xxxxx
MONO_PUBLIC_KEY=pk_live_xxxxx

# -----------------------------------------------------------------------------
# AWS Configuration (for production)
# -----------------------------------------------------------------------------
# AWS_REGION=eu-west-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# S3 for file storage/exports
# AWS_S3_BUCKET_NAME=nairatrack-exports
# AWS_S3_REGION_NAME=eu-west-1

# -----------------------------------------------------------------------------
# Redis Configuration (for caching/Celery)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Email Configuration (for notifications)
# -----------------------------------------------------------------------------
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your-sendgrid-api-key
# DEFAULT_FROM_EMAIL=noreply@nairatrack.com

# -----------------------------------------------------------------------------
# Sentry (Error Monitoring)
# -----------------------------------------------------------------------------
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
